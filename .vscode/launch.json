    "version": "0.2.0",
    "configurations": [
        {
            "name": "ğŸš€ Flutter Debug Assistant Test App",
            "cwd": "test_flutter_app",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "program": "lib/main.dart",
            "console": "debugConsole",
            "args": [
                "--dart-define=FLUTTER_DEBUG_ASSISTANT_ENABLED=true",
                "--debug",
                "--verbose"
            ],
            "env": {
                "FLUTTER_DEBUG_ASSISTANT_TEST": "true"
            }
        },
        {
            "name": "ğŸ”§ Flutter Debug Assistant Extension",
            "type": "extensionHost",
            "request": "launch",
            "cwd": "flutter_debug_extension",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/flutter_debug_extension",
                "${workspaceFolder}/test_flutter_app"
            ],
            "outFiles": [
                "${workspaceFolder}/flutter_debug_extension/dist/**/*.js"
            ],
            "preLaunchTask": "npm: package",
            "presentation": {
                "group": "extension",
                "order": 1
            }
        },
        {
            "name": "ğŸ¯ Extension + Flutter App (Combined)",
            "type": "extensionHost",
            "request": "launch",
            "cwd": "flutter_debug_extension",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/flutter_debug_extension",
                "${workspaceFolder}/test_flutter_app"
            ],
            "outFiles": [
                "${workspaceFolder}/flutter_debug_extension/dist/**/*.js"
            ],
            "preLaunchTask": "npm: package",
            "postDebugTask": "launch-flutter-app",
            "presentation": {
                "group": "combined",
                "order": 1
            }
        },
        {
            "name": "ğŸ“± Flutter App (Profile Mode)",
            "cwd": "test_flutter_app",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile",
            "program": "lib/main.dart",
            "args": [
                "--dart-define=FLUTTER_DEBUG_ASSISTANT_ENABLED=true"
            ]
        },
        {
            "name": "ğŸ“¦ Flutter App (Release Mode)",
            "cwd": "test_flutter_app",
