{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build MCP Server",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build"
			],
			"group": "build",
			"problemMatcher": [
				"$tsc"
			],
			"isBackground": false
		},
		{
			"label": "Run MCP Server",
			"type": "shell",
			"command": "npm",
			"args": [
				"start"
			],
			"group": "test",
			"dependsOn": "Build MCP Server",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Watch Build",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build:watch"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [
				"$tsc-watch"
			]
		}
	]
}