// Initialize WebSocket server for real-time streaming
function initializeWebSocketServer(port: number = 8080): Promise<void> {
  return new Promise((resolve, reject) => {
    try {
      // Create HTTP server for WebSocket upgrade
      httpServer = createServer();
      
      // Create WebSocket server
      wss = new WebSocketServer({ server: httpServer });
      
      wss.on('connection', (ws: WebSocket, request) => {
        console.error(`üîå New AI client connected from ${request.socket.remoteAddress}`);
        connectedClients.add(ws);
        
        // Send welcome message
        ws.send(JSON.stringify({
          type: 'connection_established',
          timestamp: new Date().toISOString(),
          message: 'Connected to Flutter Error Transport Stream',
          server_version: '1.0.0'
        }));
        
        ws.on('message', (data) => {
          try {
            const message = JSON.parse(data.toString());
            console.error(`üì® Received message from AI client:`, message);
            
            // Handle client commands (e.g., subscription preferences)
            if (message.type === 'subscribe') {
              ws.send(JSON.stringify({
                type: 'subscription_confirmed',
                timestamp: new Date().toISOString(),
                filters: message.filters || 'all'
              }));
            }
          } catch (err) {
            console.error(`‚ùå Failed to parse client message:`, err);
          }
        });
        
        ws.on('close', () => {
          console.error(`üîå AI client disconnected`);
          connectedClients.delete(ws);
        });
        
        ws.on('error', (error) => {
          console.error(`‚ùå WebSocket client error:`, error);
          connectedClients.delete(ws);
        });
      });
      
      httpServer.listen(port, () => {
        console.error(`üåê Real-time error streaming server running on port ${port}`);
        console.error(`üì° AI systems can connect via: ws://localhost:${port}`);
        resolve();
      });
      
      httpServer.on('error', (error: Error) => {
        console.error(`‚ùå HTTP server error:`, error);
        reject(error);
      });
      
    } catch (error) {
      console.error(`‚ùå Failed to initialize WebSocket server:`, error);
      reject(error);
    }
  });
}

// Graceful shutdown
process.on('SIGINT', () => {
  console.error('\nüõë Shutting down Flutter Error Transport Server...');
  
  if (wss) {
    wss.close(() => {
      console.error('üì° WebSocket server closed');
    });
  }
  
  if (httpServer) {
    httpServer.close(() => {
      console.error('üåê HTTP server closed');
    });
  }
  
  process.exit(0);
});

